---
// Import components
import Layout from '../components/layout/Layout.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import Hero from '../components/content/Hero.astro';
import Card from '../components/ui/Card.astro';
import Button from '../components/ui/Button.astro';

// Real content from the original musclecarinsurance.com site
const coverageTypes = [
  {
    title: 'Collision & Comprehensive',
    description: 'Our policies cover both accident-related and non-accident damages, ensuring your muscle car is protected no matter the circumstance.'
  },
  {
    title: 'Agreed Value Coverage',
    description: 'Insure your muscle car at its appraised value, safeguarding against depreciation and ensuring full value compensation in the event of a loss.'
  },
  {
    title: 'Custom Parts & Equipment Coverage',
    description: 'Protect your vehicle\'s unique modifications, including custom paint jobs and aftermarket parts, with our specialized coverage options.'
  }
];

const testimonial = {
  quote: "Switching to Muscle Car Insurance was the best decision I made for my classic Camaro. The agreed value coverage gives me confidence that my investment is protected.",
  author: "Alex R."
};

const faqs = [
  {
    question: "What makes muscle car insurance different from regular auto insurance?",
    answer: "Muscle car insurance is specifically designed for classic, vintage, and high-performance vehicles. Unlike standard auto insurance that depreciates your car's value over time, muscle car insurance offers agreed value coverage, specialized repair options, and coverage for custom parts and modifications."
  },
  {
    question: "How is the agreed value of my muscle car determined?",
    answer: "The agreed value is determined through professional appraisals, market research, and documentation of your vehicle's condition and modifications. We work with certified appraisers who specialize in muscle cars to establish a fair and accurate value that both you and we agree upon."
  },
  {
    question: "Can I drive my muscle car daily with this insurance?",
    answer: "Yes! We offer flexible usage options including daily driver coverage, weekend pleasure use, or show-only policies. Our coverage adapts to how you actually use your muscle car, whether it's your primary vehicle or a weekend cruiser."
  },
  {
    question: "Are modified muscle cars covered?",
    answer: "Absolutely. Our custom parts and equipment coverage protects aftermarket modifications, performance upgrades, custom paint, chrome work, and interior modifications. We understand that modifications often increase your car's value and ensure they're properly protected."
  }
];
---

<Layout 
  title="Muscle Car Insurance – Protect Your Muscle Car with Specialized Insurance"
  description="Ensure your prized vehicle is safeguarded with tailored insurance solutions designed for the unique needs of muscle car owners."
>
  <Header />
  
  <main>
    <!-- Hero Section -->
    <section class="relative bg-gradient-to-r from-primary-brand to-accent text-white py-20 lg:py-32">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center">
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold font-heading mb-6 leading-tight">
            Muscle Car Insurance
          </h1>
          <p class="text-xl lg:text-2xl mb-8 opacity-95 leading-relaxed">
            Specialized coverage for classic, vintage, and muscle cars with agreed value protection
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a 
              href="/quote"
              class="bg-white text-primary-brand hover:bg-gray-100 px-8 py-4 rounded-lg font-semibold text-lg transition-colors duration-200"
            >
              Get Your Quote
            </a>
            <a 
              href="tel:844-967-5247"
              class="border-2 border-white text-white hover:bg-white hover:text-primary-brand px-8 py-4 rounded-lg font-semibold text-lg transition-colors duration-200"
            >
              Call 844-967-5247
            </a>
          </div>
        </div>
      </div>
    </section>
    
    <!-- Coverage Features Section -->
    <section class="py-20 bg-white">
      <div class="container mx-auto px-4">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-primary-brand mb-6">
            Specialized Coverage for Your Muscle Car
          </h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            Professional insurance solutions designed specifically for classic, vintage, and muscle car owners
          </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {coverageTypes.map((coverage) => (
            <div class="bg-gray-50 rounded-lg p-8 text-center hover:shadow-lg transition-shadow duration-300">
              <h3 class="text-xl font-bold text-primary-brand mb-4">
                {coverage.title}
              </h3>
              <p class="text-gray-600 leading-relaxed">
                {coverage.description}
              </p>
            </div>
          ))}
        </div>
      </div>
    </section>
    
    <!-- Customer Testimonial Section -->
    <section class="py-20 bg-gray-50">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center">
          <blockquote class="text-2xl md:text-3xl text-gray-700 italic mb-8 leading-relaxed">
            "{testimonial.quote}"
          </blockquote>
          <cite class="text-lg font-semibold text-primary-brand not-italic">
            - {testimonial.author}
          </cite>
        </div>
      </div>
    </section>
    
    <!-- How It Works Section -->
    <section class="py-20 bg-white">
      <div class="container mx-auto px-4">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-primary-brand mb-6">
            Get Your Quote in 3 Simple Steps
          </h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            Our streamlined process makes it easy to get specialized muscle car insurance coverage
          </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
          <div class="text-center">
            <div class="bg-primary-brand text-white rounded-full w-20 h-20 flex items-center justify-center text-2xl font-bold mx-auto mb-6">
              1
            </div>
            <h3 class="text-xl font-bold text-primary-brand mb-4">
              Provide Information
            </h3>
            <p class="text-gray-600 leading-relaxed">
              Tell us about your muscle car including make, model, condition, and any modifications.
            </p>
          </div>
          
          <div class="text-center">
            <div class="bg-primary-brand text-white rounded-full w-20 h-20 flex items-center justify-center text-2xl font-bold mx-auto mb-6">
              2
            </div>
            <h3 class="text-xl font-bold text-primary-brand mb-4">
              Get Your Quote
            </h3>
            <p class="text-gray-600 leading-relaxed">
              Receive a customized quote based on your vehicle's unique value and your coverage needs.
            </p>
          </div>
          
          <div class="text-center">
            <div class="bg-primary-brand text-white rounded-full w-20 h-20 flex items-center justify-center text-2xl font-bold mx-auto mb-6">
              3
            </div>
            <h3 class="text-xl font-bold text-primary-brand mb-4">
              Get Protected
            </h3>
            <p class="text-gray-600 leading-relaxed">
              Choose your coverage options and get the specialized protection your muscle car deserves.
            </p>
          </div>
        </div>
        
        <div class="text-center mt-16">
          <a 
            href="/quote"
            class="bg-primary-brand hover:bg-accent text-white px-8 py-4 rounded-lg font-semibold text-lg transition-colors duration-200"
          >
            Start Your Quote Now
          </a>
        </div>
      </div>
    </section>
    
    <!-- FAQ Section -->
    <section class="py-20 bg-gray-50">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <div class="text-center mb-16">
            <h2 class="text-3xl md:text-4xl font-bold text-primary-brand mb-6">
              Frequently Asked Questions
            </h2>
            <p class="text-xl text-gray-600">
              Get answers to common questions about muscle car insurance
            </p>
          </div>
          
          <div class="space-y-4">
            {faqs.map((faq, index) => (
              <div class="bg-white rounded-lg border border-gray-200">
                <button 
                  class="w-full text-left p-6 focus:outline-none"
                  onclick={`toggleFaq(${index})`}
                >
                  <div class="flex items-center justify-between">
                    <h3 class="text-lg font-semibold text-primary-brand pr-4">
                      {faq.question}
                    </h3>
                    <div class="text-primary-brand text-xl font-bold" id={`arrow-${index}`}>
                      +
                    </div>
                  </div>
                </button>
                <div class="px-6 pb-6 hidden" id={`answer-${index}`}>
                  <div class="border-t border-gray-200 pt-4">
                    <p class="text-gray-600 leading-relaxed">
                      {faq.answer}
                    </p>
                  </div>
                </div>
              </div>
            ))}
          </div>
          
          <div class="text-center mt-12">
            <p class="text-lg text-gray-600 mb-6">
              Have more questions? Our experts are here to help.
            </p>
            <a 
              href="/contact"
              class="border-2 border-primary-brand text-primary-brand hover:bg-primary-brand hover:text-white px-6 py-3 rounded-lg font-semibold transition-colors duration-200"
            >
              Contact Our Experts
            </a>
          </div>
        </div>
      </div>
    </section>
    
    <!-- CTA Section -->
    <section class="py-20 bg-primary-brand text-white text-center">
      <div class="container mx-auto px-4">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">
          Ready to Protect Your Muscle Car?
        </h2>
        <p class="text-xl mb-8 max-w-2xl mx-auto opacity-95">
          Get specialized insurance coverage that understands the unique value of your muscle car.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a 
            href="/quote"
            class="bg-white text-primary-brand hover:bg-gray-100 px-8 py-4 rounded-lg font-semibold text-lg transition-colors duration-200"
          >
            Get Your Quote Now
          </a>
          <a 
            href="tel:844-967-5247"
            class="border-2 border-white text-white hover:bg-white hover:text-primary-brand px-8 py-4 rounded-lg font-semibold text-lg transition-colors duration-200"
          >
            Call 844-967-5247
          </a>
        </div>
      </div>
    </section>
    
  </main>
  
  <Footer />
</Layout>

<script>
  // FAQ Toggle Functionality
  function toggleFaq(index) {
    const answer = document.getElementById(`answer-${index}`);
    const arrow = document.getElementById(`arrow-${index}`);
    
    if (answer.classList.contains('hidden')) {
      // Close all other FAQs first
      document.querySelectorAll('[id^="answer-"]').forEach(el => {
        el.classList.add('hidden');
      });
      document.querySelectorAll('[id^="arrow-"]').forEach(el => {
        el.textContent = '+';
        el.classList.remove('rotate-45');
      });
      
      // Open this FAQ
      answer.classList.remove('hidden');
      arrow.textContent = '−';
      arrow.classList.add('rotate-45');
    } else {
      // Close this FAQ
      answer.classList.add('hidden');
      arrow.textContent = '+';
      arrow.classList.remove('rotate-45');
    }
  }
  
  // Make function globally available
  window.toggleFaq = toggleFaq;
</script>
