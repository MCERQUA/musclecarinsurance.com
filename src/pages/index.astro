          </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
          {coverageTypes.map((coverage, index) => {
            const imageUrls = [
              '/images/customized_muscle_car_coverage.jpeg',
              '/images/custom_muscle_car_coverage.jpg', 
              '/images/muscle_car_auto_insurance_coverage.jpg'
            ];
            return (
              <Card variant="elevated" hover class="bg-white shadow-xl hover:shadow-2xl transition-all duration-300">
                <div class="text-center p-8">
                  <img 
                    src={imageUrls[index]} 
                    alt={coverage.title}
                    class="w-full h-56 object-cover rounded-lg mb-6 shadow-md"
                  />
                  <div class="text-5xl mb-6">{coverage.icon}</div>
                  <h3 class="text-2xl font-heading font-bold text-primary-brand mb-4">
                    {coverage.title}
                  </h3>
