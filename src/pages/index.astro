    </section>
    
    <!-- How It Works Section -->
    <section class="section bg-gray-50 py-20">
      <div class="container mx-auto">
        <div class="text-center mb-16">
          <h2 class="text-4xl md:text-5xl font-heading font-bold text-primary-brand mb-6">
