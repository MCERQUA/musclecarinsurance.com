---
// Import components
import Layout from '../../components/layout/Layout.astro';
import Header from '../../components/layout/Header.astro';
import Footer from '../../components/layout/Footer.astro';

// Blog posts data - in a real application, this would come from a CMS or markdown files
const blogPosts = [
  {
    title: 'Top 10 Muscle Cars to Insure in 2024',
    slug: 'top-10-muscle-cars-to-insure-2024',
    excerpt: 'Discover which classic muscle cars are not only investment-worthy but also offer the best insurance value for collectors and enthusiasts.',
    author: 'Mike Stevens',
    date: '2024-08-15',
    readTime: '8 min read',
    image: '/images/muscle_car_auto_insurance_coverage.jpg',
    category: 'Car Reviews',
    featured: true
  },
  {
    title: 'Understanding Agreed Value vs. Actual Cash Value Coverage',
    slug: 'agreed-value-vs-actual-cash-value-coverage',
    excerpt: 'Learn the critical differences between agreed value and actual cash value coverage, and why it matters for your classic car investment.',
    author: 'Sarah Johnson',
    date: '2024-08-12',
    readTime: '6 min read',
    image: '/images/vintage_muscle_car_coverage.jpeg',
    category: 'Insurance Tips',
    featured: true
  },
  {
    title: 'How to Properly Store Your Muscle Car for Winter',
    slug: 'how-to-store-muscle-car-winter',
    excerpt: 'Essential winter storage tips to protect your muscle car from the elements and maintain its value during the off-season.',
    author: 'Tom Rodriguez',
    date: '2024-08-08',
    readTime: '10 min read',
    image: '/images/custom_muscle_car_coverage.jpg',
    category: 'Maintenance',
    featured: false
  },
  {
    title: 'The Complete Guide to Muscle Car Modifications and Insurance',
    slug: 'muscle-car-modifications-insurance-guide',
    excerpt: 'Everything you need to know about insuring modified muscle cars, from engine swaps to custom paint jobs.',
    author: 'Lisa Chen',
    date: '2024-08-05',
    readTime: '12 min read',
    image: '/images/customized_muscle_car_coverage.jpeg',
    category: 'Modifications',
    featured: false
  },
  {
    title: 'Classic Car Appraisal: What You Need to Know',
    slug: 'classic-car-appraisal-guide',
    excerpt: 'A comprehensive guide to getting your classic muscle car properly appraised for insurance purposes.',
    author: 'David Kim',
    date: '2024-08-01',
    readTime: '7 min read',
    image: '/images/vintage_muscle_car_coverage.jpeg',
    category: 'Valuation',
    featured: false
  },
  {
    title: 'State-by-State Classic Car Insurance Requirements',
    slug: 'state-classic-car-insurance-requirements',
    excerpt: 'Navigate the complex world of state insurance requirements for classic and muscle cars across all 50 states.',
    author: 'Jennifer Adams',
    date: '2024-07-28',
    readTime: '15 min read',
    image: '/images/muscle_car_auto_insurance_coverage.jpg',
    category: 'Legal',
    featured: false
  }
];

const categories = ['All', 'Car Reviews', 'Insurance Tips', 'Maintenance', 'Modifications', 'Valuation', 'Legal'];
const featuredPosts = blogPosts.filter(post => post.featured);
const recentPosts = blogPosts.slice(0, 6);
---

<Layout 
  title="Muscle Car Insurance Blog – Expert Tips & Insights"
  description="Read expert articles about muscle car insurance, maintenance, modifications, and collecting. Get insider tips from industry professionals."
>
  <Header />
  
  <main>
    <!-- Hero Section -->
    <section class="relative bg-gradient-to-r from-blue-900 to-blue-600 text-white py-16 lg:py-24">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center">
          <h1 class="text-4xl md:text-5xl font-bold font-heading mb-6 leading-tight">
            Muscle Car Insurance Blog
          </h1>
          <p class="text-xl mb-8 opacity-95 leading-relaxed">
            Expert insights, tips, and guides for muscle car enthusiasts and collectors
          </p>
        </div>
      </div>
    </section>

    <!-- Featured Posts -->
    <section class="py-20 bg-white">
      <div class="container mx-auto px-4">
        <div class="mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-blue-900 mb-4">Featured Articles</h2>
          <p class="text-xl text-gray-600">Don't miss our most popular and insightful content</p>
        </div>
        
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-16">
          {featuredPosts.map((post) => (
            <article class="bg-white rounded-xl shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1 overflow-hidden">
              <div class="relative">
                <img 
                  src={post.image} 
                  alt={post.title}
                  class="w-full h-64 object-cover"
                />
                <div class="absolute top-4 left-4">
                  <span class="bg-blue-600 text-white px-3 py-1 rounded-full text-sm font-medium">
                    {post.category}
                  </span>
                </div>
                <div class="absolute top-4 right-4">
                  <span class="bg-red-600 text-white px-3 py-1 rounded-full text-sm font-medium">
                    Featured
                  </span>
                </div>
              </div>
              
              <div class="p-6">
                <div class="flex items-center text-sm text-gray-500 mb-3">
                  <span>{post.author}</span>
                  <span class="mx-2">•</span>
                  <span>{new Date(post.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</span>
                  <span class="mx-2">•</span>
                  <span>{post.readTime}</span>
                </div>
                
                <h3 class="text-xl font-bold text-blue-900 mb-3 hover:text-blue-700 transition-colors">
                  <a href={`/blog/${post.slug}/`}>{post.title}</a>
                </h3>
                
                <p class="text-gray-600 leading-relaxed mb-4">
                  {post.excerpt}
                </p>
                
                <a 
                  href={`/blog/${post.slug}/`}
                  class="inline-flex items-center text-blue-600 hover:text-blue-800 font-medium transition-colors group"
                >
                  Read Article
                  <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                  </svg>
                </a>
              </div>
            </article>
          ))}
        </div>
      </div>
    </section>

    <!-- All Posts -->
    <section class="py-20 bg-gray-50">
      <div class="container mx-auto px-4">
        <div class="mb-12">
          <h2 class="text-3xl md:text-4xl font-bold text-blue-900 mb-8">All Articles</h2>
          
          <!-- Category Filter -->
          <div class="flex flex-wrap gap-4">
            {categories.map((category) => (
              <button 
                class="px-6 py-2 rounded-full border-2 border-blue-600 text-blue-600 hover:bg-blue-600 hover:text-white transition-colors duration-200 category-filter"
                data-category={category}
              >
                {category}
              </button>
            ))}
          </div>
        </div>

        <!-- Blog Posts Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {blogPosts.map((post) => (
            <article class="bg-white rounded-lg shadow-md hover:shadow-xl transition-shadow duration-300 overflow-hidden blog-post" data-category={post.category}>
              <div class="relative">
                <img 
                  src={post.image} 
                  alt={post.title}
                  class="w-full h-48 object-cover hover:scale-105 transition-transform duration-300"
                />
                <div class="absolute top-4 left-4">
                  <span class="bg-blue-600 text-white px-3 py-1 rounded-full text-sm font-medium">
                    {post.category}
                  </span>
                </div>
              </div>
              
              <div class="p-6">
                <div class="flex items-center text-sm text-gray-500 mb-3">
                  <span>{post.author}</span>
                  <span class="mx-2">•</span>
                  <span>{new Date(post.date).toLocaleDateString('en-US', { month: 'short', day: 'numeric' })}</span>
                  <span class="mx-2">•</span>
                  <span>{post.readTime}</span>
                </div>
                
                <h3 class="text-lg font-bold text-blue-900 mb-3 hover:text-blue-700 transition-colors leading-tight">
                  <a href={`/blog/${post.slug}/`}>{post.title}</a>
                </h3>
                
                <p class="text-gray-600 leading-relaxed mb-4 text-sm">
                  {post.excerpt}
                </p>
                
                <a 
                  href={`/blog/${post.slug}/`}
                  class="inline-flex items-center text-blue-600 hover:text-blue-800 font-medium transition-colors group text-sm"
                >
                  Read More
                  <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                  </svg>
                </a>
              </div>
            </article>
          ))}
        </div>
      </div>
    </section>

    <!-- Newsletter Signup -->
    <section class="py-20 bg-blue-900 text-white text-center">
      <div class="container mx-auto px-4">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">
          Stay Updated with Our Latest Articles
        </h2>
        <p class="text-xl mb-8 max-w-2xl mx-auto opacity-95">
          Get expert muscle car insurance tips, industry insights, and exclusive content delivered to your inbox.
        </p>
        <div class="max-w-md mx-auto">
          <div class="flex gap-4">
            <input 
              type="email" 
              placeholder="Enter your email" 
              class="flex-1 px-4 py-3 rounded-lg text-blue-900 focus:outline-none focus:ring-2 focus:ring-blue-300"
            />
            <button class="bg-white text-blue-900 hover:bg-gray-100 px-6 py-3 rounded-lg font-semibold transition-colors duration-200">
              Subscribe
            </button>
          </div>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>

<script>
  // Category filtering functionality
  function filterPosts(category) {
    const posts = document.querySelectorAll('.blog-post');
    const buttons = document.querySelectorAll('.category-filter');
    
    // Update button states
    buttons.forEach(btn => {
      btn.classList.remove('bg-blue-600', 'text-white');
      btn.classList.add('text-blue-600');
    });
    
    const activeButton = document.querySelector(`[data-category="${category}"]`);
    if (activeButton) {
      activeButton.classList.add('bg-blue-600', 'text-white');
      activeButton.classList.remove('text-blue-600');
    }
    
    // Filter posts
    posts.forEach(post => {
      if (category === 'All' || post.dataset.category === category) {
        post.style.display = 'block';
        post.style.animation = 'fadeIn 0.3s ease-in-out';
      } else {
        post.style.display = 'none';
      }
    });
  }
  
  // Add click event listeners to filter buttons
  document.querySelectorAll('.category-filter').forEach(button => {
    button.addEventListener('click', () => {
      filterPosts(button.dataset.category);
    });
  });
  
  // Set initial state
  filterPosts('All');
</script>

<style>
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }
</style>