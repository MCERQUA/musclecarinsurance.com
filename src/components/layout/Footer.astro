---
// Footer.astro - Clean footer matching PDF design
export interface Props {
  class?: string;
}

const {
  class: className = ''
} = Astro.props;

const currentYear = new Date().getFullYear();
---

<footer class={`bg-gray-800 text-white ${className}`}>
  <div class="container mx-auto px-4 py-12">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      
      <!-- Company Info -->
      <div class="md:col-span-2">
        <div class="flex items-center space-x-2 mb-6">
          <svg class="w-8 h-8" viewBox="0 0 24 24" fill="currentColor">
            <path d="M18.92 6.01C18.72 5.42 18.16 5 17.5 5H15V3C15 2.45 14.55 2 14 2H10C9.45 2 9 2.45 9 3V5H6.5C5.84 5 5.28 5.42 5.08 6.01L3 12V20C3 20.55 3.45 21 4 21H5C5.55 21 6 20.55 6 20V19H18V20C18 20.55 18.45 21 19 21H20C20.55 21 21 20.55 21 20V12L18.92 6.01ZM11 5H13V7.5L12 8.5L11 7.5V5ZM6.5 16C5.67 16 5 15.33 5 14.5S5.67 13 6.5 13 8 13.67 8 14.5 7.33 16 6.5 16ZM17.5 16C16.67 16 16 15.33 16 14.5S16.67 13 17.5 13 19 13.67 19 14.5 18.33 16 17.5 16Z"/>
          </svg>
          <span class="text-xl font-bold">Muscle Car Insurance</span>
        </div>
        <p class="text-gray-300 mb-6 max-w-md">
          Specialized insurance coverage for muscle cars, classic cars, and vintage vehicles with expert service and competitive rates.
        </p>
        
        <div class="space-y-2">
          <div class="flex items-center space-x-3">
            <svg class="w-5 h-5 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
              <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path>
            </svg>
            <a href="tel:844-967-5247" class="hover:text-blue-400 transition-colors">844-967-5247</a>
          </div>
          <div class="flex items-center space-x-3">
            <svg class="w-5 h-5 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
              <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path>
              <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path>
            </svg>
            <a href="mailto:Info@musclecarinsurance.com" class="hover:text-blue-400 transition-colors">Info@musclecarinsurance.com</a>
          </div>
        </div>
      </div>
      
      <!-- Quick Links -->
      <div>
        <h3 class="text-lg font-semibold mb-4">Quick Links</h3>
        <ul class="space-y-2">
          <li><a href="/coverage" class="text-gray-300 hover:text-white transition-colors">Coverage</a></li>
          <li><a href="/about" class="text-gray-300 hover:text-white transition-colors">About</a></li>
          <li><a href="/quote" class="text-gray-300 hover:text-white transition-colors">Get Quote</a></li>
          <li><a href="/contact" class="text-gray-300 hover:text-white transition-colors">Contact</a></li>
        </ul>
      </div>
      
      <!-- Resources -->
      <div>
        <h3 class="text-lg font-semibold mb-4">Resources</h3>
        <ul class="space-y-2">
          <li><a href="/faq" class="text-gray-300 hover:text-white transition-colors">FAQ</a></li>
          <li><a href="/claims" class="text-gray-300 hover:text-white transition-colors">Claims</a></li>
          <li><a href="/support" class="text-gray-300 hover:text-white transition-colors">Support</a></li>
          <li><a href="/blog" class="text-gray-300 hover:text-white transition-colors">Blog</a></li>
        </ul>
      </div>
      
    </div>
  </div>
  
  <!-- Bottom Bar -->
  <div class="border-t border-gray-700">
    <div class="container mx-auto px-4 py-6">
      <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
        <div class="text-sm text-gray-400">
          &copy; {currentYear} Muscle Car Insurance. All rights reserved.
        </div>
        <div class="flex items-center space-x-6 text-sm text-gray-400">
          <a href="/privacy-policy" class="hover:text-white transition-colors">Privacy Policy</a>
          <a href="/terms-of-service" class="hover:text-white transition-colors">Terms of Service</a>
        </div>
      </div>
    </div>
  </div>
</footer>